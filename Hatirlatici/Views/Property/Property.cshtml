@model Hatirlatici.Models.Property

<h1>Ev Taşınmaz Ekle</h1>

<form method="post" action="@Url.Action("AddProperty")">
    <div class="form-group">
        <label for="Type">Tipi:</label>
        <select id="Type" name="Type" class="form-control" required>
            <option value="Ev">Ev</option>
            <option value="Arsa">Arsa</option>
            <option value="İş Yeri">İş Yeri</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Address">Adres:</label>
        <input type="text" id="Address" name="Address" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="CompanyId">Şirket:</label>
        <select id="CompanyId" name="CompanyId" class="form-control" required>
            @foreach (var company in ViewBag.Companies)
            {
                <option value="@company.Id">@company.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="BranchId">Şube:</label>
        <select id="BranchId" name="BranchId" class="form-control" required>
            @foreach (var branch in ViewBag.Branches)
            {
                <option value="@branch.Id">@branch.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="InsuranceCompany">Sigorta Firması:</label>
        <input type="text" id="InsuranceCompany" name="InsuranceCompany" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="InsuranceDate">Sigorta Tarihi:</label>
        <input type="date" id="InsuranceDate" name="InsuranceDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="InsurancePrice">Sigorta Fiyatı:</label>
        <input type="number" id="InsurancePrice" name="InsurancePrice" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="InsuranceValidity">Sigorta Geçerlilik Süresi:</label>
        <input type="date" id="InsuranceValidity" name="InsuranceValidity" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="KaskoCompany">Kasko Firması:</label>
        <input type="text" id="KaskoCompany" name="KaskoCompany" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="KaskoDate">Kasko Tarihi:</label>
        <input type="date" id="KaskoDate" name="KaskoDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="KaskoPrice">Kasko Fiyatı:</label>
        <input type="number" id="KaskoPrice" name="KaskoPrice" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="KaskoValidity">Kasko Geçerlilik Süresi:</label>
        <input type="date" id="KaskoValidity" name="KaskoValidity" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="DocumentName">Belge Adı:</label>
        <input type="text" id="DocumentName" name="DocumentName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="DocumentNumber">Belge Numarası:</label>
        <input type="text" id="DocumentNumber" name="DocumentNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="DocumentDate">Belge Tarihi:</label>
        <input type="date" id="DocumentDate" name="DocumentDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ValidityPeriod">Geçerlilik Süresi:</label>
        <input type="number" id="ValidityPeriod" name="ValidityPeriod" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button> <!-- Ekle butonu -->
</form>
