@model Hatirlatici.Models.Vehicle

<h1>Araç Ekle</h1>

<form method="post" action="@Url.Action("AddVehicle")">
    <div class="form-group">
        <label for="Brand">Araç Marka:</label>
        <input type="text" id="Brand" name="Brand" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Model">Model:</label>
        <input type="text" id="Model" name="Model" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ModelYear">Model Yılı:</label>
        <input type="number" id="ModelYear" name="ModelYear" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ShasiNo">Şasi No:</label>
        <input type="text" id="ShasiNo" name="ShasiNo" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="FuelType">Yakıt Türü:</label>
        <select id="FuelType" name="FuelType" class="form-control" required>
            <option value="Benzin">Benzin</option>
            <option value="Dizel">Dizel</option>
            <option value="Elektrik">Elektrik</option>
            <option value="Hibrit">Hibrit</option>
        </select>
    </div>

    <div class="form-group">
        <label for="BranchId">Şube:</label>
        <select id="BranchId" name="BranchId" class="form-control" required>
            @foreach (var branch in ViewBag.Branches)
            {
                <option value="@branch.Id">@branch.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="CompanyId">Şirket:</label>
        <select id="CompanyId" name="CompanyId" class="form-control" required>
            @foreach (var company in ViewBag.Companies)
            {
                <option value="@company.Id">@company.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="LastInspectionDate">Son Muayene Tarihi:</label>
        <input type="date" id="LastInspectionDate" name="LastInspectionDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="LastInspection">Son Muayene:</label>
        <input type="text" id="LastInspection" name="LastInspection" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ValidityPeriod">Geçerlilik Süresi:</label>
        <input type="date" id="ValidityPeriod" name="ValidityPeriod" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Description">Açıklama:</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button> <!-- Ekle butonu burada -->
</form>
