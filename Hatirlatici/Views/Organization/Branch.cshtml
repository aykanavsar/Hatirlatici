@model List<Hatirlatici.Models.Branch>

<h1>Şubeler</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Şube Adı</th>
            <th>Açıklama</th>
            <th>Şirket</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <td>@branch.Id</td>
                <td>@branch.Name</td>
                <td>@branch.Description</td>

                <!-- Şirket Adı Gösterme: Eğer null değilse, şirket ismini göster -->
                <td>
                    @if (branch.Company != null)
                    {
                        @branch.Company.Name
                    }
                    else
                    {
                        @* Şirket bilgisi yoksa, boş bırakılır *@
                    }
                </td>

                <td>
                    <!-- Diğer işlemler burada yapılabilir -->
                </td>
            </tr>
        }
    </tbody>
</table>
