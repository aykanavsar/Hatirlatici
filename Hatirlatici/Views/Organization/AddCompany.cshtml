@model Hatirlatici.Models.Company

<h1>Yeni Şirket Ekle</h1>

<form method="post" action="@Url.Action("AddCompany")">
    <div class="form-group">
        <label for="Name">Şirket Adı:</label>
        <input type="text" id="Name" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Açıklama:</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="GroupCompanyId">Grup Şirketi:</label>
        <select id="GroupCompanyId" name="GroupCompanyId" class="form-control">
            @foreach (var groupCompany in ViewBag.GroupCompanies)
            {
                <option value="@groupCompany.Id">@groupCompany.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
